<Window
  x:Class="Sela.LibraryExample.UI.Views.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Width="525"
  Height="350"
  Title="Library"
  Background="{StaticResource BackgroundBrush}"
  WindowStartupLocation="CenterScreen">
  <DockPanel LastChildFill="True" x:Name="MainPanel">
    <StackPanel 
      x:Name="OptionsPanel" 
      Orientation="Horizontal"
      DockPanel.Dock="Bottom">
      <Button
        x:Name="AddNewItemButton"
        Command="{Binding AddNewItemCommand}"
        Content="Add"/>
      <Button
        x:Name="RemoveItemButton"
        Command="{Binding RemoveItemCommand}"
        CommandParameter="{Binding Library/}"
        Content="Delete"/>
    </StackPanel>
    <ListView
      x:Name="CatalogList"
      IsSynchronizedWithCurrentItem="True"
      ItemsSource="{Binding Library}"
      MouseDoubleClick="CatalogList_OnMouseDoubleClick">
      <ListView.View>
        <GridView>
          <GridViewColumn DisplayMemberBinding="{Binding ISBN}" Header="ISBN"/>
          <GridViewColumn DisplayMemberBinding="{Binding Title}" Header="Title"/>
          <GridViewColumn DisplayMemberBinding="{Binding Genre}" Header="Genre"/>
        </GridView>
      </ListView.View>
    </ListView>
  </DockPanel>
</Window>